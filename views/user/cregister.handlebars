<link rel="stylesheet" href="/css/cstyle.css">
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class= "card card-body">
			<h3 class="text-center">Account Register</h3>
			<form action="../cuser/cregister" method="post">
				<div class="form-group">
					
 




					<label for="name">Name</label><br>
					<input type="text" class="clogininputBox" name="name" value="{{name}}" required>
				</div>
				<div class="form-group">
				<label for="gender">Gender</label>
				<br>
				<div class="form-check form-check-inline">
					
							<input class="form-check-input" type="radio" id="Male" value="Male" name="gender">
							<label class="form-check-label" for="Male">Male</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="Female" value="Female" name="gender">
							<label class="form-check-label" for="Female">Female</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="None" value="Prefer Not to say" name="gender" checked>
							<label class="form-check-label" for="None">Prefer not to say</label>
						</div>
				</div>
				<div class="form-group">
					<label for="email">Email</label><br>
					<input type="email" name="email" class="clogininputBox" value="{{email}}" required>
				</div>
				<div class="form-group">
					<label for="contact">Contact Number</label><br>
					<input type="tel" name="contact" pattern=".{8}" class="clogininputBox" value="{{contact}}" required>
				</div>
				<div class="form-group">
					<label for="address">Address</label><br>
					<input type="text" name="address" class="clogininputBox" value="{{address}}" required>
				</div>
				<div class="form-group">
					<label for="postalcode">Postal Code</label><br>
					<input type="text" name="postalcode" pattern=".{6}" class="clogininputBox" value="{{postalcode}}" required>
				</div>
				<div class="form-group">
					 
					<label for="password">Password</label><br>
					<input type="password" name="password" class="clogininputBox" value="{{password}}" required>
				</div>
				<div class="form-group">
					<label for="password2">Confirm Password</label><br>
					<input type="password" name="password2" class="clogininputBox" value="{{password2}}" required>
				</div>
				<button type="submit" class="addfeedback">Create</button>
			</form>
		</div>
	</div>
</div>