<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/staffLogin.css">
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="box-container">
			<h3 class="text-center">Zalora</h3>
			<form method="post" action="../user/login"> 
				<div class="form-group">
					<input type="text" name="staffNo" placeholder="Staff No" class="form-control" required value="{{staffNo}}">
				</div> 
				<div class="form-group">
					<input type="password" name="password" placeholder = "Password" class="form-control" id = "password" required value="{{password}}">
					<input type="checkbox" onclick="myFunction()"><span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
				</div>
				<br>
				<button type="submit" class="submit">Submit</button>
				<br>
				<br>
				<a href="/staffRegister" class="nav-link">Sign up instead</a>

<!-- An element to toggle between password visibility -->
				
				<br>
			</form>
		</div>
	</div>
</div>

<script>
function myFunction() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}

</script>