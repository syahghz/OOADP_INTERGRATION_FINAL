<head>
	<style>
		.border-primary {
    border-color: #f4b642!important;
}
.text-primary{
	color:#f4b642;
}
	</style>
</head>
<div class="container">
	{{#if forms}}
	<p id="merchant" name="merchant"> {{user.name}}</p>
	<div class="card card-body">
		<h3 class="text-primary">Order</h3>
		{{#each forms}}
		
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-header">
				<h5 class="card-title">{{itemName}}</h5>
			</div>
			<div class="card-body">
				{{!-- Practical 09 Exercise 02 --}}
				<div class="row">
					<div class="col-sm-12 col-md-12 col-lg-2">
						<a href="{{posterURL}}" data-title="{{itemName}}" data-toggle="lightbox">
							<img src="{{posterURL}}" alt="Poster unavailable" class="img-thumbnail img-fluid">
						</a>
					</div>
					<div class="col-sm-12 col-md-12 col-lg-8">
						<div class="row"> {{!-- subtitles, language... --}}
							<div class="col-sm-12 col-md-6 col-lg-3">
								<p class="font-italic">Price</p>
								<p class="text-info">
									{{price}}
								</p>
							</div>
							<div class="col-sm-12 col-md-6 col-lg-4">
								<p class="font-italic">Item Code</p>
								<p class="text-info">
									{{itemCode}}
								</p>
							</div>
							<div class="col-sm-12 col-md-6 col-lg-2">
								<p class="font-italic">Quantity</p>
								<p class="text-info">{{quantity}}</p>
							</div>
							<div class="col-sm-12 col-md-6 col-lg-3">
								<p class="font-italic">Date of Delivery</p>
								<p class="text-info">{{formatDate dateofDelivery 'DD MMM YYYY'}}</p>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12 col-md-6 col-lg-10">
								<p class="font-italic">Reference</p>
								<p class="text-info">{{referenceNo}}</p>
							</div>
						</div>
					</div>
					<div class="col-sm-12 col-md-6 col-lg-2">

						<a href="/form/saveForminDraft/{{id}}" class="card-link" data-toggle="confirmation"
							data-title="Confirm delete?">
							<i class="far fa-trash-alt"></i>
							Delete
						</a>
					</div>
				</div>
			</div>

			<div class="accordion" id="storyAccordion{{id}}">
				<div class="card-header" id="headingOne{{id}}">
					<button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne{{id}}"
						aria-expanded="false" aria-controls="collapseOne{{id}}">
						Description<i class="fas fa-chevron-down"></i>
					</button>

				</div>

				<div id="collapseOne{{id}}" class="collapse" aria-labelledby="headingOne{{id}}"
					data-parent="#storyAccordion{{id}}">
					<div class="card-body">
						{{description}}
					</div>
				</div>
			</div>
		</div>

	




	{{/each}}
</div>
{{else}}
<h3>No form created</h3>
{{/if}}
</div>